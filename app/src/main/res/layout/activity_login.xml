<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"
    android:background="@mipmap/login_background">

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:maxLines="1"
        android:background="@null"
        android:hint="用户名"
        android:textColor="#faf8f8"
        android:textSize="18sp"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:drawableBottom="@drawable/login_user"
        android:textColorHint="#fff"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:maxLines="1"
        android:background="@null"
        android:hint="密码"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintStart_toStartOf="parent"
        android:password="true"
        android:layout_marginTop="12dp"
        android:drawableBottom="@drawable/login_user"
        android:textColorHint="#fff"/>

    <TextView
        android:id="@+id/bt_login"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="登录"
        android:textColor="#0396ff"
        android:onClick="login"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/password"
        app:layout_constraintStart_toStartOf="@+id/password"
        app:layout_constraintEnd_toEndOf="@+id/password"
        android:background="@drawable/login_bt_back"/>
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_login"
        app:layout_constraintStart_toStartOf="@+id/bt_login"
        android:text="注册"
        android:textColor="#fff"
        android:onClick="toRegister"
        android:background="@drawable/login_register_bt"
        android:gravity="center"/>
    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:textColor="#fff"
        app:layout_constraintRight_toRightOf="@+id/bt_login"
        app:layout_constraintTop_toTopOf="@+id/tv_register"
        app:layout_constraintBottom_toBottomOf="@+id/tv_register"
        android:layout_marginRight="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
